{
  "settings": {
    "index": {
      "number_of_shards": 1,
      "number_of_replicas": 1
    },
    "analysis": {
      "analyzer": {
        "rid_analyzer": {
          "type": "custom",
          "tokenizer": "rid_tokenizer",
          "filter": ["lowercase"]
        },
        "docid_analyzer": {
          "type": "custom",
          "tokenizer": "docid_tokenizer",
          "filter": ["lowercase"]
        },
        "edge_ngram_analyzer": {
          "type": "custom",
          "tokenizer": "edge_ngram_tokenizer",
          "filter": ["lowercase"]
        },
        "title_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding",
            "stop",
            "title_stemmer",
            "title_shingle"
          ]
        },
        "theme_highlight_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding",
            "stop",
            "theme_stemmer",
            "theme_shingle"
          ]
        }
      },
      "tokenizer": {
        "rid_tokenizer": {
          "type": "ngram",
          "min_gram": 3,
          "max_gram": 3,
          "token_chars": ["letter", "digit"]
        },
        "docid_tokenizer": {
          "type": "ngram",
          "min_gram": 4,
          "max_gram": 4,
          "token_chars": ["letter", "digit"]
        },
        "edge_ngram_tokenizer": {
          "type": "edge_ngram",
          "min_gram": 3,
          "max_gram": 15,
          "token_chars": ["letter", "digit"]
        }
      },
      "filter": {
        "title_shingle": {
          "type": "shingle",
          "min_shingle_size": 2,
          "max_shingle_size": 2,
          "output_unigrams": true
        },
        "theme_shingle": {
          "type": "shingle",
          "min_shingle_size": 3,
          "max_shingle_size": 3,
          "output_unigrams": true
        },
        "title_stemmer": {
          "type": "stemmer",
          "language": "english"
        },
        "theme_stemmer": {
          "type": "stemmer",
          "language": "english"
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "rid": {
        "type": "text",
        "analyzer": "rid_analyzer",
        "fields": {
          "keyword": {
            "type": "keyword"
          },
          "prefix": {
            "type": "text",
            "analyzer": "edge_ngram_analyzer",
            "search_analyzer": "standard"
          }
        }
      },
      "docid": {
        "type": "text",
        "analyzer": "docid_analyzer",
        "fields": {
          "keyword": {
            "type": "keyword"
          },
          "prefix": {
            "type": "text",
            "analyzer": "edge_ngram_analyzer",
            "search_analyzer": "standard"
          }
        }
      },
      "event_title": {
        "type": "text",
        "analyzer": "title_analyzer"
      },
      "event_theme": {
        "type": "text",
        "analyzer": "theme_highlight_analyzer"
      },
      "event_highlight": {
        "type": "text",
        "analyzer": "theme_highlight_analyzer"
      },
      "year": {
        "type": "keyword"
      },
      "country": {
        "type": "keyword"
      },
      "event_summary": {
        "type": "text",
        "index": false
      },
      "commentary_summary": {
        "type": "text",
        "index": false
      },
      "next_event_plan": {
        "type": "text",
        "index": false
      },
      "event_object": {
        "type": "text",
        "index": false
      },
      "event_count": {
        "type": "integer",
        "index": false
      },
      "event_conclusion": {
        "type": "text",
        "index": false
      },
      "event_conclusion_overall": {
        "type": "text",
        "index": false
      },
      "next_event_suggestion": {
        "type": "text",
        "index": false
      },
      "url": {
        "type": "keyword",
        "index": false
      }
    }
  }
}
